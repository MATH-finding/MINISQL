    print("ğŸ§ª ç´¢å¼•è§£ææµ‹è¯•å·¥å…·")
    print("=" * 40)

    test_lexer()
    test_parser()
    test_integration()
    test_join()  # æ–°å¢JOINæµ‹è¯•
    test_aggregate()  # æ–°å¢èšåˆå‡½æ•°æµ‹è¯•

    print("\nâœ… æµ‹è¯•å®Œæˆ")


if __name__ == "__main__":
    main()
